{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"module": "esnext",
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
